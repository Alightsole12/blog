<!DOCTYPE HTML>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel='stylesheet' type='text/css' href='/css/grid.css' media='(min-width:481px)'/>
		<link rel='stylesheet' type='text/css' href='/css/styles.css'/>
		<script type='text/javascript' src='/lib/marked.js'></script>
		<title><%= title.replace(/&#96;/g,"\`").replace(/&quot;/g,"\"").replace(/&apos;/g,"\'"); %></title>
	</head>
	<body>
		<div class='show-desktop'>
			<div class='col-sm-3'>
				<p>HI</p>
			</div>
		</div>
		<div class='col-sm-8'>
			<h2 id='title'><%= title.replace(/&#96;/g,"\`").replace(/&quot;/g,"\"").replace(/&apos;/g,"\'"); %></h2>
			<p id='date'><%= date %></p>
			<hr/>
			<p id='content'></p>
			<script type="text/javascript">
				document.getElementById('content').innerHTML = marked(`<%= body.replace(/&#96;/g, "\`").replace(/&quot;/g, "\"").replace(/&apos;/g, "\'"); %>`).replace(/\n/g, "<br/>");
			</script>
		</div>
		<div class='col-sm-1'>
		</div>
	</body>
</html>
